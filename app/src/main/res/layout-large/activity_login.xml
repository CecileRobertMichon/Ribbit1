<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AuthBackground"
    tools:context="com.cecilerm.ribbit.UI.LoginActivity">

    <ImageView
        android:id="@+id/backgroundImageLogin"
        style="@style/AuthImageBackground" />

    <TextView
        android:layout_marginTop="180dp"
        android:textSize="100sp"
        android:id="@+id/titleLogin"
        android:text="@string/app_name"
        style="@style/AuthTitle" />

    <TextView
        android:textSize="20sp"
        android:id="@+id/subtitleLogin"
        android:text="Android Project"
        android:layout_below="@+id/titleLogin"
        style="@style/AuthSubtitle" />

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/Box"
        android:layout_below="@+id/subtitleLogin"
        style="@style/AuthBoxLayout">

    <EditText
        android:id="@+id/usernameField"
        android:hint="@string/username_hint"
        style="@style/AuthEditText">
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/passwordField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernameField"
        android:ems="10"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textColorHint="@color/hint_grey"
        android:textSize="18sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/LoginButton"
        android:layout_below="@+id/Box"
        android:layout_alignLeft="@id/Box"
        android:layout_alignRight="@id/Box"
        android:text="@string/login_button_text"
        android:textSize="20sp"
        style="@style/AuthButton" />

    <TextView
        android:id="@+id/ForgotPasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:textColor="@color/white_text"
        android:textSize="20sp"
        android:text="@string/forgot_password_text" />
    
    <TextView
        android:id="@+id/SignUpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/LoginButton"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="@string/signup_text"
        android:textColor="@color/white_text"/>




</RelativeLayout>
