<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AuthBackground"
    tools:context="com.cecilerm.ribbit.UI.SignUpActivity" >

    <ImageView
        style="@style/AuthImageBackground"
        android:id="@+id/backgroundImageSignUp"/>

    <LinearLayout
        style="@style/AuthBoxLayout"
        android:id="@+id/BoxSignUp"
        android:layout_centerVertical="true"
        >

    <EditText
        style="@style/AuthEditText"
        android:layout_below="@+id/subtitleSignUp"
        android:id="@+id/usernameField"
        android:hint="@string/username_hint" >
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/passwordField"
        style="@style/AuthEditText"
        android:layout_below="@+id/usernameField"
        android:hint="@string/password_hint"
        android:inputType="textPassword" />

    <EditText
        style="@style/AuthEditText"
        android:id="@+id/emailField"
        android:layout_below="@+id/passwordField"
        android:hint="@string/email_hint"
        android:inputType="textEmailAddress" />



    <EditText
        style="@style/AuthEditText"
        android:inputType="textPersonName"
        android:id="@+id/firstNameField"
        android:layout_below="@+id/emailField"
        android:hint="@string/first_name_hint"/>

    <EditText
        style="@style/AuthEditText"
        android:inputType="textPersonName"
        android:id="@+id/lastNameField"
        android:layout_below="@+id/firstNameField"
        android:hint="@string/last_name_hint" />

    <EditText
        style="@style/AuthEditText"
        android:inputType="number"
        android:id="@+id/ageField"
        android:layout_below="@+id/lastNameField"
        android:hint="@string/age_hint" />

    <EditText
        style="@style/AuthEditText"
        android:id="@+id/hometownField"
        android:layout_below="@+id/ageField"
        android:hint="@string/hometown_hint"
        android:layout_marginBottom="8dp"/>

    </LinearLayout>

    <Button
        style="@style/AuthButton"
        android:id="@+id/SignUpButton"
        android:text="@string/signup_button_text"
        android:layout_below="@+id/BoxSignUp"
        android:layout_toStartOf="@+id/ButtonDivider"
        android:layout_alignStart="@+id/BoxSignUp"/>

    <Button
        style="@style/AuthButton"
        android:id="@+id/CancelButton"
        android:text="@string/cancel_button_text"
        android:layout_toEndOf="@+id/ButtonDivider"
        android:layout_below="@+id/BoxSignUp"
        android:layout_alignEnd="@+id/BoxSignUp"/>

    <ImageView
        android:id="@+id/ButtonDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/BoxSignUp"
        android:src="@drawable/button_divider"/>

</RelativeLayout><!-- From: file:/Users/cecilerobertm/AndroidStudioProjects/Ribbit1/app/src/main/res/layout-large/activity_sign_up.xml -->