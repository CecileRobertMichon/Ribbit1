<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/messageIcon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_action_picture"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/message_list_item_vertical_margin"
        android:paddingTop="16dp"
        android:layout_centerVertical="true"
        android:contentDescription="Message Icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/senderLabel"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/messageIcon"
        android:paddingLeft="@dimen/activity_horizontal_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Error retrieving date"
        android:textColor="#848484"
        android:id="@+id/timeLabel"
        android:layout_marginTop="16dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:layout_alignLeft="@id/senderLabel"
        android:layout_below="@+id/senderLabel" />
</RelativeLayout><!-- From: file:/Users/cecilerobertm/AndroidStudioProjects/Ribbit1/app/src/main/res/layout/message_item.xml -->